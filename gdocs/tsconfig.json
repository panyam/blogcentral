{
    "exclude": [
        "node_modules/*",
        "dist/server/*"
    ],
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "strictNullChecks": true,
    "typeRoots": [ 
        "node_modules/types"
    ],
    "types": [ "jquery", "node" ],
    "lib":[ "es2015", "dom", "esnext" ],
    "experimentalDecorators": true,
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ]
  }
}
